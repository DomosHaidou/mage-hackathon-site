{% extends "::base.html.twig" %}
{% block content %}

<form action="https://www.paypal.com/cgi-bin/webscr" method="post">
    Thanks for your registration. If you want, you can now pay your fee of {{event.price}} â‚¬:
    <input type="hidden" name="cmd" value="_xclick">
    <input type="hidden" name="notify_url" value="http://mage-hackathon.dev/ipn/ipn-no-notification" />
    <input type="hidden" name="business" value="{{seller_mail}}">
    <input type="hidden" name="item_name"
           value="Hackathon ({{event.name}}, {{event.dateFrom|date("d.m.y")}} - {{event.dateTo|date("d.m.y")}})">
    <input type="hidden" name="item_number"
           value="{{user.userId}}">
    <input type="hidden" name="amount" value="{{event.price}}">
    <input type="hidden" name="no_shipping" value="1">
    <input type="hidden" name="no_note" value="1">
    <input type="hidden" name="currency_code" value="EUR">
    <input type="submit" value="Pay now with Paypal" class="btn btn-primary" />
</form>
{% endblock %}