{% extends 'MopaBootstrapBundle::base.html.twig' %}

{% block foot_script %}
    {%- javascripts
    'http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'
    'Resources/public/js/bootstrap.min.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock foot_script %}


{% block head_style %}
    {% stylesheets
    'Resources/public/css/bootstrap.css'
    'Resources/public/css/bootstrap-responsive.css' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock head_style %}
{% block navbar %}
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path('_welcome') }}">Mage Hackathon</a>

                <div class="nav-collapse">
                    {{ knp_menu_render('main', {'currentClass': 'active'}) }}
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
{% endblock navbar %}
{% block content %}
    <div class="span9">
        {% block left %}
            <strong>Hier k√∂nnte Ihre Werbung stehen ... </strong>
        {% endblock left %}
    </div>
    <div class="span3">
        {% block content_sidebar %}
            {% block right %}
            {% endblock right %}
        {% endblock content_sidebar %}
    </div>
{% endblock content %}
